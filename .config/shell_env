# vim: set ft=sh sw=2 et :

# You may need to manually set your language environment
export LANG=en_US.UTF-8

# Setup editors
export TERM=xterm-256color
export EDITOR=vim
export GIT_EDITOR="$EDITOR"
export USE_EDITOR="$EDITOR"
export VISUAL=$EDITOR

# Setup pager
export PAGER=less
export LESS='-iFMRSX -x4'

# Setup brew
if [ -f /opt/homebrew/bin/brew ]; then
    export BREW_PREFIX=/opt/homebrew
    export PATH="$BREW_PREFIX/bin:$PATH"
elif [ -f /usr/local/bin/brew ]; then
    export BREW_PREFIX=/usr/local
    export PATH="$BREW_PREFIX/bin:$PATH"
fi

# Add distillery paths
if [ -d /opt/distillery/bin ]; then
    export PATH=/opt/distillery/bin:$PATH
fi

# Add Java paths
if [[ -n "$JAVA_HOME" && -d "$JAVA_HOME/bin" ]]; then
	export PATH="$PATH:$JAVA_HOME/bin"
fi

# Setup Golang paths
export GOROOT="/usr/local/go"
if [ -d $BREW_PREFIX/opt/go/libexec ]; then
    export GOROOT="$BREW_PREFIX/opt/go/libexec"
fi
export GOPATH="$HOME/.local/share/go"
# [[ -d $GOPATH ]] || mkdir -p $GOPATH
export PATH="$PATH:$GOROOT/bin:$GOPATH/bin"

# Setup GVM environment
[[ -s "$HOME/.gvm/scripts/gvm" ]] && source "$HOME/.gvm/scripts/gvm"

# Setup python virtualenvs/pipenv
export WORKON_HOME=$HOME/.local/share/virtualenvs
export PROJECT_HOME=$HOME/gitroot

# Setup pyenv
export PYENV_ROOT=$HOME/.local/share/pyenv
export PATH=$PYENV_ROOT/bin:$PATH

# Setup pipsi
export PIPSI_HOME=$HOME/.local/share/virtualenvs
export PIPSI_BIN_DIR=$HOME/.local/bin

# Setup pipx
export PIPX_HOME=$HOME/.local/share/pipx
export PIPX_BIN_DIR=$HOME/.local/bin

# Add home bin paths
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"

if [ -f "$HOME/.config/shell_env.local" ]; then
  source "$HOME/.config/shell_env.local"
fi

umask 022
